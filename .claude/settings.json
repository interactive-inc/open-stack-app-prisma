{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "deny": [
      "Bash(bun run dev)",
      "Edit(src/components/theme-provider.tsx)",
      "Edit(src/components/ui/*)",
      "Edit(src/hooks/use-mobile.ts)",
      "Edit(src/lib/utils.ts)",
      "MultiEdit(src/components/theme-provider.tsx)",
      "MultiEdit(src/components/ui/*)",
      "MultiEdit(src/hooks/use-mobile.ts)",
      "MultiEdit(src/lib/utils.ts)",
      "Write(src/components/theme-provider.tsx)",
      "Write(src/components/ui/*)",
      "Write(src/hooks/use-mobile.ts)",
      "Write(src/lib/utils.ts)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".ts\") or endswith(\".tsx\"))' | xargs -r bun run check"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".ts\") or endswith(\".tsx\"))' | xargs -r bun run format"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".ts\") or endswith(\".tsx\"))' | xargs -r bun run test"
          }
        ]
      }
    ]
  }
}
